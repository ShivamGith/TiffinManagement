<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/teal_700"
        android:elevation="4dp"
        android:tooltipText="@string/app_name"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>

    <!-- Scroll View -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <!-- Content Layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Bordered Dashboard -->
            <RelativeLayout
                android:id="@+id/dashboard"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="16dp"
                android:background="@drawable/dashboard_border"
                android:padding="8dp">

                <!-- Dashboard Icons -->
                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_launcher_background" />

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@id/icon1"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_launcher_background" />

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_below="@id/icon1"
                    android:layout_alignParentStart="true"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_launcher_background" />

                <ImageView
                    android:id="@+id/icon4"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_below="@id/icon2"
                    android:layout_toEndOf="@id/icon3"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_launcher_background" />

            </RelativeLayout>

            <!-- Action Tray -->
            <RelativeLayout
                android:id="@+id/action_tray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dashboard"
                android:layout_margin="16dp">

                <!-- Action Icons -->
                <ImageView
                    android:id="@+id/action_icon1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_launcher_background" />

                <ImageView
                    android:id="@+id/action_icon2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@id/action_icon1"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_launcher_background" />

                <ImageView
                    android:id="@+id/action_icon3"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_below="@id/action_icon1"
                    android:layout_alignParentStart="true"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_launcher_background" />

                <ImageView
                    android:id="@+id/action_icon4"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_below="@id/action_icon2"
                    android:layout_toEndOf="@id/action_icon3"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_launcher_background" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
